<%= bootstrap_form_with(model: @shop, local: true, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <%= f.alert_message "Please fix the errors below.", error_summary: false %>
  <%= f.text_field :product_name %>
  <%= f.number_field :price %>
  <%= f.number_field :quantity %>
  <%= f.text_field :information %>
  <%= f.file_field :productImage %>
  <%= f.form_group do %>
    <%= f.primary @shop.persisted? ? "Update" : "Create New Product" %>
  <% end %>
<% end %>